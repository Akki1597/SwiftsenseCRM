@model List<InvoiceMicroServices.WebMVC.AdminDashboard.Models.InvoiceDetails>
@{
    ViewData["Title"] = "ViewInvoiceList";
    Layout = "~/Views/Shared/PartialDashboardLayout.cshtml";
}

<div class="container-xl">
    @{
        Html.RenderPartial("PartialDeleteModelPopUp");
    }
    <div class="row">
        @{
            Html.RenderPartial("PartialLeftMenu");
        }
        @Html.Hidden("deletionId", "", new { id = "deletionId" });
        <div class="col-md-10 menuMargin" style="margin-top:30px;">
            <div class="card" style="min-height:220px;margin-top:10px;padding-left:10px;padding-right:10px">
                <div class="row">
                    <div class="col-sm-11 col-12">
                        <h4 style="margin:20px 0px 40px 20px;color:gray;">Invoice List</h4>
                    </div>
                    <div class="col-sm-1 col-12">
                        <button type="button" class="btn btnColor btn-sm" onclick="location.href='@Url.Action("Billing", "Billing")'" style="margin-top:30px;text-align:right">
                            <i class="fa fa-angle-double-left" aria-hidden="true"></i>&nbsp;Back
                        </button>
                    </div>
                </div>
                <table class="table table-bordered table-sm">
                    <thead>
                        <tr>
                            <th>S.No.</th>
                            <th>Invoice No</th>
                            <th>Date</th>
                            <th>Billing Month</th>
                            <th>Client Name</th>
                            <th>Project Name</th>
                            <th>Project Id</th>
                            <th>Total Number of Hours</th>
                            <th>Total Amount</th>
                            <th>View</th>
                            @*<th>Edit</th>*@
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            int i = 0;
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(i = i + 1)</td>
                                    <td>@item.invoiceNo</td>
                                    <td>@item.date</td>
                                    <td>@item.billingMonth</td>
                                    <td>@item.clientName</td>
                                    <td>@item.projectName</td>
                                    <td>@item.projectId</td>
                                    <td>@item.totalHours</td>
                                    <td>@item.totalAmount</td>
                                    <td>
                                        @Html.ActionLink("View", "ViewInvoice", "Billing", new { invoiceNumber = item.invoiceNo }, new { @class = "btn btn-sm btn-primary" })
                                    </td>
                                    @*<td><button class="btn btn-sm btn-success">Edit</button></td>*@
                                    <td>
                                        @Html.ActionLink("Delete", "Delete", new { id = item.invoiceNo }, new { @class = "btn btn-sm btn-danger element", @data_toggle = "modal", @data_target = "#exampleModalCenter", @data_id = item.invoiceNo })
                                    </td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="11">No Record Found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
