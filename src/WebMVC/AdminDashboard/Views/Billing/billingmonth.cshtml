@model InvoiceMicroServices.WebMVC.AdminDashboard.Models.billingIndexViewModel

@{
    ViewData["Title"] = "billingmonth";
}


<div class="container-xl">
    <div class="row">
        @{
            Html.RenderPartial("PartialLeftMenu");
        }
        <div class="col-md-10 menuMargin" style="margin-top:30px;">
            <div class="card" style="min-height:220px;margin-top:10px;padding-left:10px;padding-right:10px">
                <div class="row">
                    <h4 style="margin:20px 0px 40px 20px;color:gray;">Select Month</h4>
                </div>
                <form role="form" class="needs-validation"  method="post" enctype="multipart/form-data" novalidate>
                    <input type="hidden" asp-for="clientId" value="@Model.clientId" />
                    <div class="form-row" style="padding-left:20px">
                        <div class="col-sm-7">
                            <div class="form-group">
                                <label class="control-label"></label>
                                <select asp-items="@Model.yearList" asp-for="@Model.selectedYear" class="form-control"></select>
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="form-group">
                                <label class="control-label"></label>
                                <select asp-items="@Model.monthList" asp-for="@Model.selectedMonth" class="form-control"></select>
                            </div>
                        </div>


                    </div>


                    <div class="">
                        <input type="submit" class="btn btnColor" asp-action="Selectedbillingmonth" asp-controller="Billing" value="Next"/>
                        <button type="button" class="btn btnColor" onclick="location.href='@Url.Action("GenerateInvoice", "Billing")'">Back</button>
                    </div>
                </form>
            </div>
        </div>


        

    </div>
</div>
