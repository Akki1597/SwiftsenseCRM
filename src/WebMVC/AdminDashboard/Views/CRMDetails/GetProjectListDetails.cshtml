@model  List<InvoiceMicroServices.WebMVC.AdminDashboard.Models.ProjectDetails>
@{
    ViewData["Title"] = "GetProjectListDetails";
    Layout = "~/Views/Shared/PartialDashboardLayout.cshtml";
}

<div class="container-xl">
    @{
        Html.RenderPartial("PartialDeleteModelPopUp");
    }
    @Html.Hidden("deletionId", "", new { id = "deletionId" });
    <div class="row">
        @{
            Html.RenderPartial("PartialLeftMenu");
        }
        <div class="col-md-10 menuMargin" style="margin-top:30px;">
            <div class="card" style="min-height:220px;margin-top:10px;padding-left:10px;padding-right:10px">
                <div class="row">
                    <div class="col-sm-11 col-12">
                        <h4 style="margin:20px 0px 40px 20px;color:gray;">Project Details</h4>
                    </div>
                    <div class="col-sm-1 col-12">
                        <button type="button" class="btn btnColor btn-sm" onclick="location.href='@Url.Action("CRMDetails", "CRMDetails")'" style="margin-top:30px;text-align:right">
                            <i class="fa fa-angle-double-left" aria-hidden="true"></i>&nbsp;Back
                        </button>
                    </div>
                </div>
                <table class="table table-bordered table-sm">
                    <thead>
                        <tr>
                            <th>S.No.</th>
                            <th>Project Name</th>
                            <th>Project Code</th>
                            <th>Project Id</th>
                            <th>Client Id</th>
                            <th>Status</th>
                            <th>No of unbilled hours</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            int i = 0;
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>@(i = i + 1)</td>
                                    <td>@data.name</td>
                                    <td>@data.pCode</td>
                                    <td>@data.projectId</td>
                                    <td>@data.clientId</td>
                                    <td>@data.status</td>
                                    <td>@data.unbilledHours</td>
                                    <td><button class="btn btn-sm btn-success" onclick="location.href='@Url.Action("EditProjectListDetails", "CRMDetails",new {projectId = data.projectId })'">Edit</button></td>
                                    <td>
                                        @Html.ActionLink("Delete", "Delete", new { id = data.projectId }, new { @class = "btn btn-sm btn-danger element", @data_toggle = "modal", @data_target = "#exampleModalCenter", @data_id = data.projectId })
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">No Record Found</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
