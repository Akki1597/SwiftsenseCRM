
@{
    ViewData["Title"] = "ViewUserType";
}

<div class="container-xl">
    @{
        Html.RenderPartial("PartialDeleteModelPopUp");
    }
    <div class="row">
        @{
            Html.RenderPartial("PartialLeftMenu");
        }
        <div class="col-md-10 menuMargin" style="margin-top:30px;">
            <div class="card" style="min-height:220px;margin-top:10px;padding-left:10px;padding-right:10px">
                <div class="row">
                    <div class="col-sm-11 col-12">
                        <h4 style="margin:20px 0px 40px 20px;color:gray;">User Type List</h4>
                    </div>
                    <div class="col-sm-1 col-12">
                        <button type="button" class="btn btnColor btn-sm" onclick="location.href='@Url.Action("UserManagement", "UserManagement")'" style="margin-top:30px;text-align:right">
                            <i class="fa fa-angle-double-left" aria-hidden="true"></i>&nbsp;Back
                        </button>
                    </div>
                </div>
                <table class="table table-bordered table-sm">
                    <thead>
                        <tr>
                            <th>S.No.</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Gender</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Delete</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Doe</td>
                            <td>xyz</td>
                            <td>7654327689</td>
                            <td>john@example.com</td>
                            <td>abc</td>
                            <td>
                                @Html.ActionLink("Delete", "UserManagement", new {  }, new { @class="element",
                                         @data_toggle = "modal", @data_target = "#exampleModalCenter",
                                          })
                            </td>

                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
          $('.element').click(function (e) {
    e.preventDefault();
    $('#exampleModalCenter').modal('show');
            });
            $('#Delete').click(function (e) {
                e.preventDefault();
                $('#deletionSuccess').modal('show');
                $('#exampleModalCenter').modal('hide');
            });

        });
    </script>
    }
       